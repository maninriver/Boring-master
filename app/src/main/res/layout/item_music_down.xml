<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="15dp"
    android:orientation="vertical">

    <TextView
        android:text="绅士"
        android:textColor="@color/colorPrimaryText"
        android:textSize="17sp"
        android:id="@+id/item_music_down_tv_name_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textSize="13sp"
        android:text="薛之谦"
        android:layout_below="@id/item_music_down_tv_name_album"
        android:id="@+id/item_music_down_tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/item_music_down_tv_down_progress"
        android:textSize="13sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/item_music_down_tv_artist"
        android:layout_below="@id/item_music_down_tv_name_album"
        android:text="8.9M - 65%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>